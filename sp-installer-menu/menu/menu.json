{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://schemas.conda.io/menuinst-1.schema.json",
  "menu_name": "Scientific Python (#PKG_VERSION#)",
  "menu_items": [{
    "name": "System Info (Scientific Python)",
    "description": "Information on the Scientific Python runtime environment",
    "icon": "{{ MENU_DIR }}/#PKG_NAME#_info.{{ ICON_EXT }}",
    "command": [
      "{{ PYTHON }}",
      "{{ MENU_DIR }}/spi_sys_info.py"
    ],
    "activate": true,
    "terminal": true,
    "platforms": {
      "win": {
        "desktop": false
      },
      "linux": {
        "Categories": [
          "Science"
        ]
      },
      "osx": {
        "CFBundleName": "SP Sys Info",
        "CFBundleDisplayName": "System Information (Scientific Python #PKG_VERSION#)",
        "CFBundleVersion": "#PKG_VERSION#"
      }
    }
  },
  {
    "name": "Scientific Python Prompt",
    "description": "Scientific Python console prompt",
    "icon": "{{ MENU_DIR }}/#PKG_NAME#_console.{{ ICON_EXT }}",
    "activate": true,
    "terminal": true,
    "command": ["will be overridden in platforms section"],
    "platforms": {
      "win": {
        "command": [
          "%SystemRoot%\\system32\\cmd.exe",
          "/K",
          "{{ MENU_DIR }}\\#PKG_NAME#_open_prompt.bat"
        ],
        "desktop": false
      },
      "linux": {
        "command": [
          "exec",
          "bash",
          "--init-file",
          "{{ MENU_DIR }}/#PKG_NAME#_open_prompt.sh"
        ],
        "Categories": [
          "Science"
        ]
      },
      "osx": {
        "command": [
          "osascript",
          "{{ MENU_DIR }}/#PKG_NAME#_open_prompt.applescript"
        ],
        "CFBundleName": "SP Prompt",
        "CFBundleDisplayName": "Prompt (Scientific Python #PKG_VERSION#)",
        "CFBundleVersion": "#PKG_VERSION#"
      }
    }
  },
  {
    "name": "Scientific Python Tutorials",
    "description": "Scientific Python online tutorials",
    "icon": "{{ MENU_DIR }}/#PKG_NAME#_web.{{ ICON_EXT }}",
    "activate": false,
    "terminal": false,
    "command": ["will be overridden in platforms section"],
    "platforms": {
      "win": {
        "command": [
          "%SystemRoot%\\system32\\WindowsPowerShell\\v1.0\\powershell.exe",
          "\"start https://mne.tools/stable/auto_tutorials -WindowStyle hidden\""
        ],
        "desktop": false
      },
      "linux": {
        "command": [
          "xdg-open",
          "https://mne.tools/stable/auto_tutorials/"
        ],
        "Categories": [
          "Science"
        ]
      },
      "osx": {
        "command": [
          "open",
          "https://mne.tools/stable/auto_tutorials/"
        ],
        "CFBundleName": "SP Tutorials",
        "CFBundleDisplayName": "Tutorials (Scientific Python #PKG_VERSION#)",
        "CFBundleVersion": "#PKG_VERSION#"
      }
    }
  },
  {
    "name": "Scientific Python User Forum",
    "description": "Scientific Python forum for discussions, problem solving, and information exchange",
    "icon": "{{ MENU_DIR }}/#PKG_NAME#_forum.{{ ICON_EXT }}",
    "activate": false,
    "terminal": false,
    "command": ["will be overridden in platforms section"],
    "platforms": {
      "win": {
        "command": [
          "%SystemRoot%\\system32\\WindowsPowerShell\\v1.0\\powershell.exe",
          "\"start https://mne.discourse.group -WindowStyle hidden\""
        ],
        "desktop": false
      },
      "linux": {
        "command": [
          "xdg-open",
          "https://mne.discourse.group"
        ],
        "Categories": [
          "Science"
        ]
      },
      "osx": {
        "command": [
          "open",
          "https://mne.discourse.group"
        ],
        "CFBundleName": "SP Forum",
        "CFBundleDisplayName": "Forum (Scientific Python #PKG_VERSION#)",
        "CFBundleVersion": "#PKG_VERSION#"
      }
    }
  },
  {
    "name": "Scientific Python",
    "description": "Scientific Python generic launcher",
    "icon": "{{ MENU_DIR }}/spi_mac_folder_icon.png",
    "activate": true,
    "terminal": false,
    "command": ["will be overridden in platforms section"],
    "platforms": {
      "linux": {
        "command": [
          "exec",
          "bash",
          "--init-file",
          "{{ MENU_DIR }}/#PKG_NAME#_open_prompt.sh"
        ],
        "Categories": [
          "Science"
        ],
        "SingleMainWindow": true,
        "NoDisplay": true,
        "StartupWMClass": "Scientific Python"
      }
    }
  }]
}
